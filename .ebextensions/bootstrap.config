commands:
  01_install_goose:
    command: |
      #!/bin/bash
      GOOSE_VERSION="v3.8.0"  # Change this to the desired Goose version
      wget https://github.com/pressly/goose/releases/download/${GOOSE_VERSION}/goose-linux-amd64 -O /usr/local/bin/goose
      chmod +x /usr/local/bin/goose
  02_run_migrations:
    command: |
      #!/bin/bash
      cd sql/schema && goose postgres "host=$RDS_HOSTNAME port=$RDS_PORT user=$RDS_USERNAME password=$RDS_PASSWORD dbname=$RDS_DB_NAME sslmode=disable" up
